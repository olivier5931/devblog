{% extends 'base.html.twig' %}

{% block body %}

{% if editMode %}

<section>

  <h2>Modifier un article</h2>

    <div class="container">
      <div class="row">
        <div class="col-md-10 offset-md-1 offset-sm-0 offset-xs-0">

        {{ form_start(formArticle) }}

        {{ form_row(formArticle.image, {'attr': {'class': 'form-control' }}) }}

        {{ form_row(formArticle.title, {'attr': {'class': 'form-control' }}) }}

        {{ form_row(formArticle.titleeng, {'attr': {'class': 'form-control' }}) }}

        {{ form_row(formArticle.category, {'attr': { 'class': 'form-control' }}) }}

        {{ form_row(formArticle.content, {'attr': {'class': 'form-control' }}) }}

        {{ form_row(formArticle.contenteng, {'attr': {'class': 'form-control' }}) }}

        {{ form_row(formArticle.fullcontent, {'attr': {'class': 'form-control' }}) }}

        {{ form_row(formArticle.fullcontenteng, {'attr': {'class': 'form-control' }}) }}

        <button type="submit" class="btn btn-primary_create">modifier</button>

        {{ form_end(formArticle) }}

        </div>
      </div>
    </div>

</section>

{% else %}

<section>

  <h2>Créer un nouvel article</h2>

    <div class="container">
      <div class="row">
        <div class="col-md-10 offset-md-1 offset-sm-0 offset-xs-0">

        {{ form_start(formArticle) }}

        {{ form_row(formArticle.image, {'attr': {'placeholder': "ajouter.jpg", 'class': 'form-control' }}) }}

        {{ form_row(formArticle.title, {'attr': {'class': 'form-control' }}) }}

        {{ form_row(formArticle.titleeng, {'attr': {'class': 'form-control' }}) }}

        {{ form_row(formArticle.category, {'attr': { 'class': 'form-control' }}) }}

        {{ form_row(formArticle.content, {'attr': {'class': 'form-control' }}) }}

        {{ form_row(formArticle.contenteng, {'attr': {'class': 'form-control' }}) }}

        {{ form_row(formArticle.fullcontent, {'attr': {'class': 'form-control' }}) }}

        {{ form_row(formArticle.fullcontenteng, {'attr': {'class': 'form-control' }}) }}

        <button type="submit" class="btn btn-primary_create">créer</button>

        {{ form_end(formArticle) }}

        </div>
      </div>
    </div>

</section>

{% endif %}

{% endblock %}
